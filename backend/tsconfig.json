{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "types": ["node"]
  },
  "include": ["src/**/*", "**/*.d.ts", "__tests__/**/*"],
  "exclude": [
    "node_modules"
  ]
}
