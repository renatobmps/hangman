generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @unique @default(uuid())
  is_activated         Boolean   @default(true)
  is_adm               Boolean   @default(false)
  username             String    @unique @default(cuid())
  email                String?
  password             String
  need_update_password Boolean   @default(false)
  is_guest             Boolean   @default(false)
  created_at           DateTime  @default(now())
  updated_at           DateTime?

  Game Game[]
}

model Hint {
  id           String    @id @unique @default(uuid())
  is_activated Boolean   @default(true)
  text         String
  created_at   DateTime  @default(now())
  updated_at   DateTime?

  HintsWords HintsWords[]
}

model Word {
  id           String    @id @unique @default(uuid())
  is_activated Boolean   @default(true)
  text         String
  description  String?
  created_at   DateTime  @default(now())
  updated_at   DateTime?

  Game       Game[]
  HintsWords HintsWords[]
}

model HintsWords {
  id         String    @id @unique @default(uuid())
  word_id    String
  hint_id    String
  created_at DateTime  @default(now())
  updated_at DateTime?

  id_hint Hint @relation(fields: [hint_id], references: [id])
  id_word Word @relation(fields: [word_id], references: [id])
}

model Game {
  id         String    @id @unique @default(uuid())
  attempts   Int
  is_beat    Boolean?
  user_id    String
  word_id    String
  created_at DateTime  @default(now())
  updated_at DateTime?

  GameLetter GameLetter[]
  user       User         @relation(fields: [user_id], references: [id])
  word       Word         @relation(fields: [word_id], references: [id])
}

model GameLetter {
  id         String    @id @unique @default(uuid())
  letter     String
  is_correct Boolean   @default(false)
  game_id    String
  created_at DateTime  @default(now())
  updated_at DateTime?

  game Game @relation(fields: [game_id], references: [id])
}
