{
  "name": "hangman",
  "version": "0.1.0",
  "homepage": "https://forca-wheat.vercel.app/",
  "scripts": {
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "predev": "npm run services:up -d",
    "dev": "NODE_ENV=development next dev",
    "postdev": "npm run services:down",
    "lint": "next lint",
    "lint:fix": "eslint src --fix --max-warnings=0",
    "services:down": "docker compose down",
    "services:stop": "docker compose stop",
    "services:up": "docker compose up",
    "services:up:detach": "docker compose up -d",
    "start": "NODE_ENV=production next start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest --setupFiles dotenv/config --watch ./tests",
    "prepare": "npx husky install"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.7.3",
    "bcrypt": "^5.0.1",
    "hash-generator": "^0.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.4",
    "next-seo": "^6.6.0",
    "next-sitemap": "^4.2.3",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-icons": "^4.4.0",
    "sequelize": "^6.35.2",
    "styled-components": "^5.3.5",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "devDependencies": {
    "@types/node": "20.10.8",
    "@types/pg": "^8.10.9",
    "@types/react": "18.2.47",
    "@types/styled-components": "^5.1.26",
    "eslint": "^9.9.1",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7"
  },
  "type": "module"
}
